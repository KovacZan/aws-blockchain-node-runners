##############################################################
# Example configuration for Polygon nodes runner app on AWS  #
##############################################################

# Set the AWS account is and region for your environment
AWS_ACCOUNT_ID="xxxxxxxxxxx"
AWS_REGION="us-east-2"
CREATE_VPC_ENDPOINT_FOR_S3="true"                   # Set to "true" to create a VPC endpoint for S3. Default: "true". Use only if another Node Runners stack has already creted a VPC endpoint and exported its ID as "VPCGatewayEndpointID"

# Common configuration parameters
POLYGON_CLIENT_COMBINATION="bor-heimdall"           # All options:  "bor-heimdall | erigon-heimdall"
POLYGON_NETWORK="mainnet"                           # All options:  "mainnet" | "mumbai"

# Sync node configuration
POLYGON_SYNC_INSTANCE_TYPE="m6g.8xlarge"
POLYGON_SYNC_CPU_TYPE="ARM_64"                      # IMPORTANT: Make sure the CPU type matches the instance type used
POLYGON_SYNC_DATA_VOL_SIZE="7450"                   # Current required data size to keep both smapshot archive and unarchived version of it
POLYGON_SYNC_DATA_VOL_TYPE="gp3"                    # Other options: "io1" | "io2" | "gp3" | "instance-store" . IMPORTANT: Use "instance-store" option only with instance types that support that feature, like popular for node im4gn, d3, i3en, and i4i instance families
POLYGON_SYNC_DATA_VOL_IOPS="10000"                  # Max IOPS for EBS volumes (not applicable for "instance-store")
POLYGON_SYNC_DATA_VOL_THROUGHPUT="500"              # Max throughput for EBS gp3 volumes (not applicable for "io1" | "io2" | "instance-store")

# RPC node configuration
POLYGON_RPC_INSTANCE_TYPE="m7g.4xlarge"
POLYGON_RPC_CPU_TYPE="ARM_64"                       # IMPORTANT: Make sure the CPU type matches the instance type used
POLYGON_RPC_DATA_VOL_SIZE="7450"                    # Minimum values in Gibibytes: nethermind-teku: 2048, geth-lighthouse: 2048, besu-teku: 2048, erigon-lighthouse: 3072
POLYGON_RPC_DATA_VOL_TYPE="gp3"                     # Other options: "io1" | "io2" | "gp3" | "instance-store" . IMPORTANT: Use "instance-store" option only with instance types that support that feature, like popular for node im4gn, d3, i3en, and i4i instance families
POLYGON_RPC_DATA_VOL_IOPS="10000"                   # Max IOPS for EBS volumes (not applicable for "instance-store")
POLYGON_RPC_DATA_VOL_THROUGHPUT="500"               # Max throughput for EBS gp3 volumes (not applicable for "io1" | "io2" | "instance-store")

# RPC HA nodes configuration
POLYGON_RPC_NUMBER_OF_NODES="2"                     # Total number of RPC nodes to be provisioned. Default: 2
POLYGON_RPC_ALB_HEALTHCHECK_GRACE_PERIOD_MIN="10"   # Time enough to initialize the instance and start downloading snpashots
POLYGON_RPC_HA_NODES_HEARTBEAT_DELAY_MIN="120"      # Time sufficient enough for a node do download snapshot, from S3 bucket, start clients, and finish sycning the delta
